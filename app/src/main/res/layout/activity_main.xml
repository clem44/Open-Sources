<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codeogenic.opensource_libraries.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="Libraries to add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <CheckBox
                android:text="Android Iconics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox0"
                android:textSize="18sp"
                android:textStyle="normal|italic"
                android:padding="10dp"
                android:checked="true" />
            <CheckBox
                android:text="Butterknife"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox1"
                android:textSize="18sp"
                android:textStyle="normal|italic"
                android:padding="10dp"
                android:checked="true" />
            <CheckBox
                android:text="CircleImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox2"
                android:textSize="18sp"
                android:textStyle="normal|italic"
                android:padding="10dp" />
            <CheckBox
                android:text="Fancy Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox3"
                android:textSize="18sp"
                android:textStyle="normal|italic"
                android:padding="10dp" />
            <CheckBox
                android:text="Material Drawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox4"
                android:textSize="18sp"
                android:textStyle="normal|italic"
                android:padding="10dp" />

            <CheckBox
                android:text="RetroFit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox5"
                android:textSize="18sp"
                android:textStyle="normal|italic"
                android:padding="10dp" />

            <TextView
                android:text="Choose Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/style_group">

                <RadioButton
                    android:text="style 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/style_1"
                    android:layout_weight="1"
                    android:checked="true" />

                <RadioButton
                    android:text="style 2"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/style_2"
                    android:layout_weight="1" />
            </RadioGroup>

            <TextView
                android:text="Set Heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:paddingTop="20dp"
                android:paddingBottom="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Libraries We Use"
                android:ems="10"
                android:id="@+id/title_editText"
                android:inputType="textCapSentences|textNoSuggestions"
                android:textSize="11pt" />

            <android.support.percent.PercentRelativeLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:paddingTop="10dp">

                <Button
                    android:text="Start Activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_widthPercent="75%"
                    android:id="@+id/btn_sources"
                    android:layout_centerVertical="false"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal" />

                <Button
                    android:text="Start Fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_frag"
                    app:layout_widthPercent="75%"
                    android:layout_below="@+id/btn_sources"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </android.support.percent.PercentRelativeLayout>

        </LinearLayout>
    </ScrollView>





</RelativeLayout>
